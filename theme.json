{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "gold",
                    "color": "#ffd700",
                    "name": "Gold"
                },
                {
                    "slug": "dark-gray",
                    "color": "#1a1a1a",
                    "name": "Dark Gray"
                },
                {
                    "slug": "light-gray",
                    "color": "#f5f5f5",
                    "name": "Light Gray"
                }
            ]
        },
        "spacing": {
			"padding": true,
			"margin": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
        "typography": {
            "lineHeight": true,
            "fontStyle": true,
            "fluid": true,
            "fontWeight": false,
            "fontSizes": [
                {
					"fluid": {
						"min": ".825rem",
						"max": ".95rem"
					},
					"size": ".95rem",
					"slug": "x-small",
					"name": "Extra Small"
				},
				{
					"fluid": {
						"min": ".95rem",
						"max": "1.05rem"
					},
					"size": "1.05rem",
					"slug": "small",
					"name": "Small"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.3rem"
					},
					"size": "1.3rem",
					"slug": "base",
					"name": "Base"
				},
				{
					"fluid": {
						"min": "1.065rem",
						"max": "1.5rem"
					},
					"size": "1.5rem",
					"slug": "medium",
					"name": "Medium"
				},
				{
					"fluid": {
						"min": "1.45rem",
						"max": "2.2rem"
					},
					"size": "2.2rem",
					"slug": "large",
					"name": "Large"
				},
				{
					"fluid": {
						"min": "2.125rem",
						"max": "3.3rem"
					},
					"size": "3.3rem",
					"slug": "x-large",
					"name": "Extra Large"
				},
				{
					"fluid": {
						"min": "3.25rem",
						"max": "4.3875rem"
					},
					"size": "4.3875rem",
					"slug": "xx-large",
					"name": "Extra Extra Large"
				}
            ]
        }
        
    },
    "styles": {
		"typography": {
			"fontSize": "var(--wp--preset--font-size--small)",
			"lineHeight": "1.2"
		},
        "elements": {
           "h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)"
				}
			}
        },
        "blocks": {
            "core/button": {
                "variations": {
					"outline": {
						"spacing": {
							"padding": {
								"top": "12px",
                                "right": "32px",
                                "bottom": "12px",
                                "left": "32px"
							}
						}
					}
				},
                "spacing": {
                    "padding": {
                        "top": "14px",
                        "right": "35px",
                        "bottom": "14px",
                        "left": "35px"
                    },
                    "margin": {
						"top": "0px",
						"bottom": "0px"
					}
                }
            },
            "core/heading": {
                "spacing": {
                    "margin": {
						"top": "0px",
						"bottom": "20px"
					}
                }
            },
            "core/paragraph": {
                "spacing": {
                    "margin": {
						"top": "0px",
						"bottom": "1rem"
					}
                }
            }
        }
	},
    "customTemplates": [
		{
			"name": "page-no-title",
			"title": "Page (Full Width, No Title)",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "landing",
			"title": "Landing Page",
			"postTypes": [
				"page"
			]
		}
	],
    "templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}




